{
    "name": "storybook-addon-headless",
    "author": "Ray Knight <array.knight+github@gmail.com>",
    "description": "Storybook addon to preview content from a headless CMS in components",
    "version": "0.0.0-development",
    "license": "MIT",
    "scripts": {
        "preinstall": "rm -rf node_modules && rm -f package-lock.json && rm -f yarn.lock",
        "prebuild": "npm run clean",
        "build": "npm-run-all build:*",
        "build:dist": "npm run rollup",
        "build:docs": "npm run storybook:build",
        "clean": "rm -rf dist && rm -rf docs",
        "commit": "npm run lint && git add -i && npx git-cz",
        "lint": "tslint --fix -p tsconfig.json -c tslint.json",
        "rollup": "rollup -c",
        "rollup:watch": "rollup -c -w",
        "prestart": "npm run clean",
        "start": "npm-run-all -p -r rollup:watch storybook:start",
        "prestorybook": "wait-on dist/register.js",
        "semantic-release": "semantic-release",
        "storybook:start": "npm run prestorybook && start-storybook -p 4000",
        "storybook:build": "npm run prestorybook && build-storybook -o docs",
        "upgrade": "npm-run-all upgrade:*",
        "upgrade:dep": "npm-check --update --production",
        "upgrade:dev": "npm-check --update --dev-only --save-exact"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "post-commit": "git push"
        }
    },
    "lint-staged": {
        "**/*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@material-ui/core": "4.8.3",
        "@storybook/addon-knobs": "5.3.8",
        "@storybook/react": "5.3.8",
        "@types/react": "16.9.18",
        "babel-loader": "8.0.6",
        "babel-preset-react-app": "9.1.0",
        "graphql-tag": "2.10.1",
        "husky": "4.2.0",
        "lint-staged": "10.0.2",
        "npm-check": "5.9.0",
        "npm-run-all": "4.1.5",
        "prettier": "1.19.1",
        "rollup": "1.29.1",
        "rollup-plugin-typescript2": "0.25.3",
        "semantic-release": "16.0.2",
        "tslint": "6.0.0",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "4.2.0",
        "tslint-react-hooks": "2.2.1",
        "typescript": "3.7.5",
        "wait-on": "4.0.0"
    },
    "dependencies": {
        "@storybook/addons": "^5.3.7",
        "@storybook/api": "^5.3.7",
        "@storybook/components": "^5.3.7",
        "@storybook/core-events": "^5.3.7",
        "@storybook/theming": "^5.3.7",
        "ajv": "^6.11.0",
        "apollo-boost": "^0.4.7",
        "axios": "^0.19.1",
        "graphql": "^14.5.8",
        "polished": "^3.4.2",
        "react": "^16.12.0",
        "react-json-view": "^1.19.1"
    },
    "peerDependencies": {
        "graphql-tag": "^2.10.1"
    },
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/ArrayKnight/storybook-addon-headless.git"
    },
    "homepage": "https://storybook-addon-headless.netlify.com/",
    "bugs": {
        "url": "https://github.com/ArrayKnight/storybook-addon-headless/issues"
    },
    "release": {
        "branch": "master"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "keywords": [
        "storybook",
        "storybookjs",
        "storybook-addon",
        "addon",
        "headless",
        "headless-cms",
        "rest",
        "graphql"
    ]
}
