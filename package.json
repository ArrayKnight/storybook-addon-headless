{
    "name": "storybook-addon-headless",
    "author": "Ray Knight <array.knight+github@gmail.com>",
    "description": "Storybook addon to preview content from a headless CMS in components",
    "version": "0.0.0",
    "license": "ISC",
    "scripts": {
        "preinstall": "rm -rf node_modules && rm -f package-lock.json && rm -f yarn.lock",
        "prebuild": "npm run clean",
        "build": "npm-run-all rollup storybook:build",
        "clean": "rm -rf dist",
        "commit": "npm run lint && git add -i && npx git-cz",
        "lint": "tslint --fix -p tsconfig.json -c tslint.json",
        "rollup": "rollup -c",
        "rollup:watch": "rollup -c -w",
        "prestart": "npm run clean",
        "start": "npm-run-all -p -r rollup:watch storybook:start",
        "prestorybook": "wait-on dist/register.js",
        "storybook:start": "npm run prestorybook && start-storybook -p 4000",
        "storybook:build": "npm run prestorybook && build-storybook -o docs",
        "upgrade": "npm-check --update --save-exact"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-commit": "git push"
        }
    },
    "lint-staged": {
        "**/*.{ts,tsx,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@material-ui/core": "4.8.3",
        "@storybook/addon-actions": "5.2.8",
        "@storybook/addon-knobs": "5.2.8",
        "@storybook/addon-viewport": "5.2.8",
        "@storybook/react": "5.2.8",
        "@types/react": "16.9.17",
        "babel-loader": "8.0.6",
        "graphql-tag": "2.10.1",
        "husky": "4.0.1",
        "lint-staged": "9.5.0",
        "npm-check": "5.9.0",
        "npm-run-all": "4.1.5",
        "prettier": "1.19.1",
        "react": "16.12.0",
        "rollup": "1.29.0",
        "rollup-plugin-typescript2": "0.25.3",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "4.1.0",
        "tslint-react-hooks": "2.2.1",
        "typescript": "3.7.4",
        "wait-on": "3.3.0"
    },
    "dependencies": {
        "@emotion/core": "^10.0.27",
        "@emotion/styled": "^10.0.27",
        "@storybook/addons": "^5.2.8",
        "@storybook/api": "^5.2.8",
        "@storybook/components": "^5.2.8",
        "@storybook/core-events": "^5.2.8",
        "apollo-boost": "^0.4.7",
        "axios": "^0.19.1",
        "graphql": "^14.5.8"
    },
    "peerDependencies": {
        "@storybook/react": "^5.2.8",
        "react": "^16.12.0",
        "graphql-tag": "^2.10.1"
    },
    "private": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ArrayKnight/storybook-addon-headless.git"
    },
    "homepage": "https://arrayknight.github.io/storybook-addon-headless/",
    "bugs": {
        "url": "https://github.com/ArrayKnight/storybook-addon-headless/issues"
    },
    "files": [
        "dist/**/*",
        "docs/**/*",
        "README.md",
        "*.js",
        "*.d.ts"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "keywords": [
        "storybook",
        "storybookjs",
        "storybook-addon",
        "addon",
        "headless",
        "headless-cms",
        "rest",
        "graphql"
    ]
}
