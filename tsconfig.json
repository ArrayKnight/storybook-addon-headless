{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~*": ["./src/*"]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noStrictGenericChecks": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "preserveConstEnums": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "sourceRoot": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es5"
    },
    "include": ["src"]
}
